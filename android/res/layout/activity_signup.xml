<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/ic_background_color"
    tools:context=".SignupActivity"
    android:orientation="vertical">


        <EditText
            android:id="@+id/signupActivity_email"
            android:layout_margin="8dp"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/signupActivity_name"
            android:layout_margin="8dp"
            android:hint="이름"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/signupActivity_password"
            android:layout_margin="8dp"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    <Button
        android:id="@+id/signupActivity_button"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/Blue"
        android:textColor="@color/ic_background_color"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:text="회원가입" />

